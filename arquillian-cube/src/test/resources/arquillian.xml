<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
  http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <extension qualifier="docker">
    <property name="serverVersion">1.18</property>
    <property name="serverUri">http://192.168.59.103:2375</property>
    <property name="connectionMode">STARTORCONNECTANDLEAVE</property>
    <!--@formatter:off-->
    <property name="dockerContainers">
      tomcat:
        image: andygeede/webprofile
        alwaysPull: true
        exposedPorts: [8080/tcp,8089/tcp,5432/udp]
        await:
          strategy: static
          ip: localhost
          ports: [8080]
        env: [JAVA_OPTS=-Dcom.sun.management.jmxremote.port=8089 -Dcom.sun.management.jmxremote.ssl=false -Dcom.sun.management.jmxremote.authenticate=false]
        portBindings: [8080/tcp,8089/tcp]
    </property>
     <!--@formatter:on-->
  </extension>

  <container qualifier="tomee" default="true">
    <configuration>
      <property name="host">192.168.59.103</property>
      <property name="httpPort">8080</property>
      <property name="deployerProperties">
        java.naming.security.principal=tomee
        java.naming.security.credentials=unsecured
      </property>
    </configuration>
  </container>

</arquillian>